{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noEmit": false,
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "vite.config.ts",
    "scripts/**/*.ts",
    "server/**/*.ts",
    "functions/**/*.ts"
  ]
}
